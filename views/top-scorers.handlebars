<!-- top scorers -->
<div class="top-scorers app-pages app-section">
	<div class="container">
		<div class="pages-title">
			<h3>Top Scorers</h3>
		</div>
		<ul class="collection">
			<li class="collection-item	blue-grey darken-1 white-text">
				<div class="row">
					<div class="col s1">
						<div class="number">#</div>
					</div>
					<div class="col s4">
						<div class="name">Name</div>
					</div>
					<div class="col s4">
						<div class="name">Team</div>
					</div>
					<div class="col s2">
						<div class="number">Goals</div>
					</div>
				</div>
			</li>
			{{#each this.data}}
			<li class="collection-item">
				<div class="row">
					<div class="col s1">
						<div class="number">{{sum @index 1}}</div>
					</div>
					<div class="col s4">
						<div class="name">{{name}}</div>
					</div>
					<div class="col s4">
						<div class="name">{{team}}</div>
					</div>
					<div class="col s2">
						<div class="number">{{goals}}</div>
					</div>
				</div>
			</li>
			{{/each}}
		</ul>
	</div>
</div>
<!-- end top scorers -->